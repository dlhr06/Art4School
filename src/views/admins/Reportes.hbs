<div class="card">
    <a class="btn btn-primary" href="/Registrate">Registra a un usuario o un administrador</a>
</div>


<div class="card">
    <div class="card-header text-center">
        <h1>Administradores</h1>
    </div>
    <table class="table table-dark table-info">
        <thead>
            <tr>
                <th scope="col">CURP</th>
                <th scope="col">Nombre</th>
                <th scope="col">Apellidos</th>
                <th scope="col">Telefono</th>
                <th scope="col">Grado Escolar</th>
                <th scope="col">Matricula escolar</th>
                <th scope="col">Correo Electronico</th>
            </tr>
        </thead>
        <tbody class="table-light" id="letraTabla">
            {{#each Administradores}}
            <tr>
                <th scope="row">{{CURP}}</th>
                <td>{{name}}</td>
                <td>{{apellidoP}} {{apellidoM}} </td>
                <td>{{telefono}}</td>
                <td>{{grado}}</td>
                <td>{{matricula}}</td>
                <td>{{email}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<div class="card">
    <div class="card-header text-center">
        <h1>Usuarios</h1>
    </div>
    <table class="table table-dark table-info">
        <thead>
            <tr>
                <th scope="col">CURP</th>
                <th scope="col">Nombre</th>
                <th scope="col">Apellidos</th>
                <th scope="col">Telefono</th>
                <th scope="col">Grado Escolar</th>
                <th scope="col">Matricula escolar</th>
                <th scope="col">Correo Electronico</th>
            </tr>
        </thead>
        <tbody class="table-light" id="letraTabla">
            {{#each EscUsuarios}}
            <tr>
                <th scope="row">{{CURP}}</th>
                <td>{{name}}</td>
                <td>{{apellidoP}} {{apellidoM}} </td>
                <td>{{telefono}}</td>
                <td>{{grado}}</td>
                <td>{{matricula}}</td>
                <td>{{email}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<div class="card">
    <div class="card-header text-center">
        <h1>Articulos</h1>
    </div>
    <table class="table table-dark table-info">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Tipo de articulo</th>
                <th scope="col">Tipo</th>
                <th scope="col">Titulo</th>
                <th scope="col">Autores</th>
                <th scope="col">Matricula de usuario</th>

            </tr>
        </thead>
        <tbody class="table-light" id="letraTabla">
            {{#each Articulos}}
            <tr>
                <th scope="row">{{user}}</th>
                <td>{{TipoDocumento}}</td>
                <td>{{Tipo}} </td>
                <td>{{TituloArticulo}}</td>
                <td>{{Autores}}</td>
                <td>{{matricula}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>