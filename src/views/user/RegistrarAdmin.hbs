{{!-- Para registrar un nuevo administrador --}}
<div class="row">
    <div class="col-md-6 mx-auto text-center">
        <div class="card">
            <div class="card-header">
                Registra a otro administrador para visualizar articulos           
            </div>
        <img src="/images/ITSM.png" class="rounded-circle mx-auto d-block m-4 logo" alt="logo">
        <div class="card-body">
            <form action="/user/RegistrarAdmin" method="POST">
            <div class="form-group Espacio">
                <h5>Datos personales</h5>
            </div>
                <div class="form-group">
                    <input type="text-transform:uppercase" class="form-control" name="CURP" placeholder="Ingrese su CURP" onKeyUp="javascript:this.value=this.value.toUpperCase()" autofocus required value="{{CURP}}">
                </div>
                <div class="form-group">
                    <input type="text-transform:uppercase" class="form-control" name="name" placeholder="Nombre(s)"  onKeyUp="javascript:this.value=this.value.toUpperCase()" autofocus required value="{{name}}">
                </div>
                <div class="form-group">
                    <input type="text-transform:uppercase" class="form-control" name="apellidoP" placeholder="Apellido Paterno"  onKeyUp="javascript:this.value=this.value.toUpperCase()" required value="{{apellidoP}}">
                 </div>
                <div class="form-group">
                    <input type="text-transform:uppercase" class="form-control" name="apellidoM" placeholder="Apellido Materno"  onKeyUp="javascript:this.value=this.value.toUpperCase()" required value="{{apellidoM}}">
                </div>
                <div class="form-group">
                     <input type="tel" class="form-control" name="telefono" placeholder="Inserte su número telefónico personal" required value="{{telefono}}">
                 </div>
                <div class="form-group">
                    <input type="text-transform:uppercase" class="form-control" name="matricula" placeholder="Inserte su matricula escolar" required value="{{matricula}}">
                 </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Inserte su correo electronico" required value="{{email}}">
                 </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="Inserte su contraseña" required value="{{password}}">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="cpassword" placeholder="Confirme su contraseña"required value="{{cpassword}}">
                 </div> 
                 <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block" >
                         Registrate
                    </button>
                 </div>
             </form>
          </div>
     </div>
  </div>
</div>