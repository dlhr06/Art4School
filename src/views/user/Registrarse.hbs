<div class="row">
    <div class="col-md-6 mx-auto text-center">
        <div class="card">
            <div class="card-header">
                Registrate como usuario para ingresar articulos
            </div>
            <img src="/images/ITSM.png" class="rounded-circle mx-auto d-block m-4 logo" alt="logo">

            <div class="card-body">
                <form action="/user/Registrarse" method="POST">
                    <div class="form-group Espacio">
                        <h5>Datos Personales</h5>
                    </div>
                    <div class="form-group">
                        <select class="custom-select" name="TipoUsuario" id="validationDefault" value="{{TipoUsuario}}" required>
                            <option selected disabled value="">Selecciona tipo de usuario</option>
                            <option>USUARIO</option>
                            <option>ADMINISTRADOR</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="text-transform:uppercase" class="form-control" name="CURP"
                            placeholder="Ingrese su CURP" onKeyUp="javascript:this.value=this.value.toUpperCase()"
                            autofocus required value="{{CURP}}">
                    </div>
                    <div class="form-group">
                        <input type="text-transform:uppercase" class="form-control" name="name" placeholder="Nombre(s)"
                            onKeyUp="javascript:this.value=this.value.toUpperCase()" autofocus required
                            value="{{name}}">
                    </div>
                    <div class="form-group">
                        <input type="text-transform:uppercase" class="form-control" name="apellidoP"
                            placeholder="Apellido Paterno" onKeyUp="javascript:this.value=this.value.toUpperCase()"
                            required value="{{apellidoP}}">
                    </div>
                    <div class="form-group">
                        <input type="text-transform:uppercase" class="form-control" name="apellidoM"
                            placeholder="Apellido Materno" onKeyUp="javascript:this.value=this.value.toUpperCase()"
                            required value="{{apellidoM}}">
                    </div>

                    <div class="form-group">
                        <input type="number" class="form-control" name="edad" placeholder="edad" required
                            value="{{edad}}">
                    </div>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">Domicilio</div>
                        </div>
                        <input type="text" class="form-control" name="Dirección" id="inlineFormInputGroup"
                            value="{{Direccion}}" required>
                    </div>
                    {{!-- <div class="form-group">
                        <input type="text" class="form-control" name="Direccion" placeholder="Dirección actual" required
                            value="{{Direccion}}">
                    </div> --}}

                    <div class="form-group">
                        <input type="tel" class="form-control" name="telefono"
                            placeholder="Inserte su número telefónico personal" required value="{{telefono}}">
                    </div>

                    <div class="form-group">
                        <input type="text-transform:uppercase" class="form-control" name="CVU"
                            placeholder="Inserte su CVU" onKeyUp="javascript:this.value=this.value.toUpperCase()"
                            required value="{{CVU}}">
                    </div>
                    <div class="form-group">
                        <input type="text-transform:uppercase" class="form-control" name="RFC"
                            placeholder="Inserte su RFC" onKeyUp="javascript:this.value=this.value.toUpperCase()"
                            required value="{{RFC}}">
                    </div>

                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">Fecha de nacimiento</div>
                        </div>
                        <input type="date" class="form-control" name="FNacimiento" id="inlineFormInputGroup"
                            value="{{Fnacimiento}}" required>
                    </div>

                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">Lugar de nacimiento</div>
                        </div>
                        <input type="text-transform:uppercase" class="form-control" name="LugarNacimiento"
                            placeholder="Ciudad/Estado/Pais " onKeyUp="javascript:this.value=this.value.toUpperCase()"
                            id="inlineFormInputGroup" value="{{LugarNacimiento}}" required>
                    </div>

                    <div class="form-group Espacio">
                        <h5>Datos Escolares</h5>
                    </div>

                    <div>
                        <fieldset disabled>
                            <div class="form-group">
                                <input type="text" id="disabledTextInput" class="form-control"
                                    placeholder="Instituto Tecnológico Superior de Misantla">
                            </div>
                        </fieldset>
                    </div>
                    <div class="form-group">
                        <select class="custom-select" name="grado" id="validationDefault" value="{{grado}}" required>
                            <option selected disabled value="">Nivel Academico</option>
                            <option>Ingeniería</option>
                            <option>Maestría</option>
                            <option>Doctorado</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <input type="text-transform:uppercase" class="form-control" name="matricula"
                            placeholder="Inserte su matricula escolar" required value="{{matricula}}">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email"
                            placeholder="Inserte su correo electronico" required value="{{email}}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Inserte su contraseña"
                            required value="{{password}}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="cpassword"
                            placeholder="Confirme su contraseña" required value="{{cpassword}}">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">
                            Registrate
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>