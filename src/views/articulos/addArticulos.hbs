
<div class="col-md-6 mx-auto text-center">
    <div class="card">
        <div class="card-header">
            <h1>Nuevo Articulo</h1>
        </div>
        <div class="card-body">
            <form action="/articulos/addNewArticulo" method="post" enctype="multipart/form-data">
             <div class="form-group">
                <select class="custom-select" name="TipoDocumento" id="validationDefault" value="{{TipoDocumento}}" required >
                    <option selected disabled value="">Tipo de documento</option>
                    <option>Articulo</option>
                    <option>Poster</option>
                </select>
            </div>
            <div class="form-group">
                <select class="custom-select" name="Tipo" id="validationDefault" value="{{Tipo}}" required >
                    <option selected disabled value="">Tipo</option>
                    <option>JCR</option>
                    <option>SCIMAGO</option>
                    <option>Springer</option>
                    <option>Scielo</option>
                    <option>Scopus</option>
                    <option>CONACYT</option>
                </select>
            </div>
            <div class="form-group">
                <input type="text" name= "TituloArticulo" class="form-control" placeholder="Titulo del documento o articulo" value="{{TituloArticulo}}" autofocus required>
            </div>
            <div class="form-group">
                <input type="text" name="Autores" class="form-control" placeholder="Nombre de los autores"value="{{Autores}}" required>
            </div>
            <div class="form-group">
                <input type="url" name="LinkURL" id="url" class="form-control" placeholder="https://example.com" pattern="https://.*" size="60" value="{{LinkURL}}" required>
            </div>
            <div class="form-group">
            
                <input type="file" name="PDF" class="form-control" placeholder="Archivo PDF del documento"  required>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit"> Guardar</button>
            </div>
            </form>
        </div>
    </div>
</div>