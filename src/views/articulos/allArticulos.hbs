<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h4>Hola {{nombreUser.name}}</h1>
                    <a href="/Articulos/add" class="btn btn-success btn-block">Agregar nuevo articulo</a>
            </div>
        </div>
    </div>
    {{#each findArticulos}}
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                {{!-- <h1> Hola{{user.name}}</h1> agregar un usuario para decir su nombre--}}
                <h2>Documento</h2>
                <h4>{{TipoDocumento}}</h4>
                <h4>{{Tipo}}</h4>
                <h3 class="card-title d-flex justify-content-between align-items-center">
                    {{TituloArticulo}} <a href="/Articulos/edit/{{_id}}"> <i class="fas fa-edit"></i></a>
                </h3>
                <h4>{{Autores}}</h4>
                <h4>{{LinkURL}}</h4>
                <h4>{{originalname}}
                    <a href="/Articulos/ViewArticulosPDF/{{_id}}"><button class="btn btn-info">Ver PDF</button></a>
                </h4>
                <Form action="/Articulos/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-danger btn-block btn-sm" type="submit"> Delete</button>
                </Form>
            </div>
        </div>
    </div>

    {{/each}}
</div>